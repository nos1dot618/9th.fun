---
import unsortedLinks from "./_links.json" assert {type: "json"};

const ROOT = "../";

const links = [...unsortedLinks].sort((a, b) => a.label.localeCompare(b.label));
---
<html>
<head>
    <title>NinthCircle - Certifications</title>
    <meta charset="utf-8"/>
    <meta name="description" content="The one who lays dormant!"/>
    <link rel="stylesheet" href={ROOT + "styles.css"}/>
    <link rel="icon" type="image/x-icon" href={ROOT + "images/favicon.png"}/>
    <meta name="viewport" content="width=device-width"/>
</head>
<body>
<div class="banner" style="text-align:left">
    <a class="link" href="../">
        <button class="button">Back</button>
    </a>
</div>
<h1 class="header">
    Certifications
</h1>
<div class="p">
    <ul>
        {
            links.map((link) =>
                    <li>
                        <a class="link hover-squiggly" href=`${link.slug}/`>
                            {link.label} -
                            <mark>{link.org}</mark>
                        </a>
                    </li>
            )
        }
    </ul>
</div>
</body>
</html>
