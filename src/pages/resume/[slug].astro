---
import resumes from "./_resumes.json" assert {type: "json"};

export function getStaticPaths() {
    return resumes.map(resume => ({
        params: {slug: resume.slug},
        props: resume
    }));
}

const ROOT = "../../";
const PAGE_ROOT = "../";

const resume = Astro.props;
---
<html>
<head>
    <title>NinthCircle - Resume</title>
    <meta charset="utf-8"/>
    <meta name="description" content="My Resume"/>
    <link rel="stylesheet" href={ROOT + "styles.css"}/>
    <link rel="icon" type="image/x-icon" href={ROOT + "images/favicon.png"}/>
    <meta name="viewport" content="width=device-width"/>
</head>
<body>
<div class="banner" style="text-align:left">
    <a class="link" href={PAGE_ROOT + "list/"}>
        <button class="button">Back</button>
    </a>
</div>
<h1 class="header">
    Resume
</h1>
<div class="p">
    <img class="thumbnail" height="100%" src={ROOT + `resume/${resume.slug}/resume.jpg`}
            style="margin-top:20px;" width="100%" alt={`${resume.title} resume`}/>
    <a class="link" href={ROOT + `resume/${resume.slug}/resume.pdf`} target="_blank">
        <button>If the Resume doesn't load; click this button to download instead</button>
    </a>
</div>
</body>
</html>