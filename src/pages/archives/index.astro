---
import links from "./_links.json" assert {type: "json"};

const ROOT = "../";
---
<html>
<head>
    <title>NinthCircle - Archives</title>
    <meta charset="utf-8"/>
    <meta name="description" content="My Archives"/>
    <link rel="stylesheet" href={ROOT + "styles.css"}/>
    <link rel="icon" type="image/x-icon" href={ROOT + "images/favicon.png"}/>
    <meta name="viewport" content="width=device-width"/>
</head>
<body>
<div class="banner" style="text-align:left">
    <a class="link" href="../">
        <button class="button">Back</button>
    </a>
</div>
<h1 class="header">
    Archives: Random Curations...
</h1>
<div class="p">
    <ul>
        {
            links.map((link) =>
                    <li>
                        <a class="link hover-squiggly" href={link.url}
                                target={link.target ? "_blank" : undefined}>
                            {link.label}
                        </a>
                    </li>)
        }
    </ul>
</div>
</body>
</html>
